#include <iostream>
#include <cstdio>
#include <cmath>
#include <string>
#include <cstring>
#include <cctype>
#include <algorithm>
using namespace std;
string mov(string a)
{
	string b,head,tail;
	head=a[0];
	tail=a[a.size()-1];
	b=a.substr(1,a.size()-2);
	a=tail+head+b;
	return a;
}
string a[10000];
int t[10000];
int main(){
	int n;
	cin>>n;
	for(int i=0;i<n;i++)
	{
		cin>>a[i];
		cin>>t[i];
	}
	for(int i=0;i<n;i++)
	{
		for(int j=1;j<=t[i]%a[i].size();j++)
		{
			a[i]=mov(a[i]);
		}
		cout<<a[i]<<endl;
	}
	
}
